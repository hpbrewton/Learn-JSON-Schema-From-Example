{
    "$ref": "#/definitions/featureList",
    "definitions": {
        "coordinates": {
            "type": [
                {"type": "number", "minimum": -90, "maximum": 90},
                {"type": "number", "minimum": -180, "maximum": 180}
            ]
        },
        "bbox": {
            "type": "array",
            "minimum": 4,
            "maximum": 4
        },
        "point": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["point"]
                },
                "point": {"$ref": "#/definitions/coordinates"},
                "bbox": {
                    "$ref": "#/definitions/bbox"
                }
            },
            "required": ["type", "point"]
        },
        "lineString": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["LineString"]
                },
                "coordinates": {
                    "type": "array",
                    "maximum": 9,
                    "items": {
                        "$ref": "#/definitions/coordinates"
                    }
                },
                "bbox": {
                    "$ref": "#/definitions/bbox"
                }
            },
            "required": ["type", "coordinates"]
        },
        "multLineString": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["MultiLineString"]
                },
                "coordinates": {
                    "type": "array",
                    "maximum": 9,
                    "items": {
                        "type": "array",
                        "maximum": 9,
                        "items": {
                            "$ref": "#/definitions/coordinates"
                        }
                    }
                },
                "bbox": {
                    "$ref": "#/definitions/bbox"
                }
            },
            "required": ["type", "coordinates"]
        },
        "multiPoint": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["MultiPoint"]
                },
                "coordinates": {
                    "type": "array",
                    "maximum": 9,
                    "items": {
                        "$ref": "#/definitions/coordinates"
                    }
                },
                "bbox": {
                    "$ref": "#/definitions/bbox"
                }
            },
            "required": ["type", "coordinates"]
        },
        "polygon": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["Polygon"]
                },
                "coordinates": {
                    "type": "array",
                    "minimum": 4,
                    "maximum": 9,
                    "items": {
                        "$ref": "#/definitions/coordinates"
                    }
                },
                "bbox": {
                    "$ref": "#/definitions/bbox"
                }
            },
            "required": ["type", "coordinates"]           
        },
        "featureList": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["FeatureList"]
                },
                "features": {
                    "type": "array",
                    "maximum": 9,
                    "items": {"$ref" : "#/definitions/feature"}
                }
            },
            "required": ["type", "features"]
        },
        "feature": {
            "anyOf": [
                {"$ref": "#/definitions/point"},
                {"$ref": "#/definitions/lineString"}
            ]
        }
    }
}